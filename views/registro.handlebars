<link rel="stylesheet" href="/registroStyle.css">
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.unsplash.com/photo-1556742419-3d4480213f85?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"
                    alt="login image" class="login-img">
            </div>
            <div class="col-sm-6 login-section-wrapper">
                <a class="brand-wrapper  m-auto" href="/">
                    <img src="logo.svg" alt="logo" class="logo">
                </a>
                <div class="login-wrapper m-auto">
                    <h1 class="login-title">Registro</h1>
                    <form action="/">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" id="nombre" class="form-control"
                                placeholder="enter your name">
                        </div>
                        <div class="form-group">
                            <label for="apellido">Apellido</label>
                            <input type="text" name="apellido" id="apellido" class="form-control"
                                placeholder="enter your lastname">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" class="form-control"
                                placeholder="email@example.com">
                        </div>
                        <div class="form-group mb-4">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control"
                                placeholder="enter your passsword">
                        </div>
                        <input name="login" id="login" class="btn btn-block login-btn" type="submit" value="Registro">
                    </form>
                    <p class="login-wrapper-footer-text">
                        Ya tienes una cuenta? <a href="/login" class="text-reset">Inicia sesion aqu√≠</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>